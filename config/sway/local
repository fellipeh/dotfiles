# Changing keyboard to US-Int
input "type:keyboard" {
    xkb_layout us
    xkb_variant intl
    #xkb_options grp:alt_shift_toggle
    xkb_numlock enabled
}

input "1267:12811:ELAN0683:00_04F3:320B_Touchpad" {
       dwt enabled
       tap enabled
       natural_scroll enabled
       middle_emulation enabled
}

input "1133:45091:Logitech_Wireless_Mouse_MX_Master_3" {
       natural_scroll enabled
}
